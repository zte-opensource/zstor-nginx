/var/log/zstor-nginx/*.log {
        daily
        missingok
        rotate 52
        compress
        delaycompress
        notifempty
        create 640 zstor-nginx trusted
        sharedscripts
        postrotate
                if [ -f /var/run/zstor-nginx.pid ]; then
                        kill -USR1 `cat /var/run/zstor-nginx.pid`
                fi
        endscript
}
